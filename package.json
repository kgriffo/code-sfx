{
  "name": "codesfx",
  "displayName": "CodeSFX",
  "description": "CodeSFX plays sound effects based on warnings and errors in your code both while writing it, and after running it.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/CodeSFX_Icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codesfx",
          "title": "CodeSFX",
          "icon": "./node_modules/@vscode/codicons/src/icons/music.svg"
        }
      ]
    },
    "views": {
      "codesfx": [
        {
          "id": "codesfx",
          "name": "CodeSFX",
          "icon": ""
        }
      ]
    },
    "commands": [
      {
        "command": "codesfx.runWithCodeSFX",
        "title": "CodeSFX: Run with CodeSFX"
      },
      {
        "command": "codesfx.toggleWhileCodingSFX",
        "title": "CodeSFX: Toggle SFX"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "^20.17.9",
    "@types/sound-play": "^1.1.3",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36",
    "sound-play": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kgriffo/code-sfx"
  }
}
